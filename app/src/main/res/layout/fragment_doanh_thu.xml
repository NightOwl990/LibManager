<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.DoanhThuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btn_tu_ngay"
            android:layout_weight="1"
            android:text="Từ ngày"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        
        <EditText
            android:id="@+id/edt_tu_ngay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="yyyy/MM/dd"
            android:layout_weight="2"
            android:textSize="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btn_den_ngay"
            android:layout_weight="1"
            android:text="Đến ngày"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edt_den_ngay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="yyyy/MM/dd"
            android:layout_weight="2"
            android:textSize="18dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_doanh_thu"
        android:text="Doanh thu"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:drawableStart="@drawable/ic_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_doanh_thu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:gravity="center"
        android:text="Doanh thu"

        android:layout_marginTop="20dp"/>

</LinearLayout>